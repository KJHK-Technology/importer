<p id="notice"><%= notice %></p>

<h1>Media Assets</h1>

<div class="row">
  <div class="two columns"><strong>Title</strong></div>
  <div class="two columns"><strong>Artist</strong></div>
  <div class="two columns"><strong>Album</strong></div>
  <div class="one column"><strong>Year</strong></div>
  <div class="one column"><strong>Cue-In</strong></div>
  <div class="one column"><strong>Intro</strong></div>
  <div class="one column"><strong title="End of Material">EOM</strong></div>
</div>
<% @artists.each do |artist, albums| %>
  <% albums.each do |album, media_assets| %>
    <% media_assets.each do |media_asset| %>
      <div class="row">
        <div class="two columns song"><%= best_in_place media_asset, :title %></div>
        <div class="two columns song"><%= best_in_place media_asset, :artist %></div>
        <div class="two columns song"><%= best_in_place media_asset, :album %></div>
        <div class="one column song"><%= best_in_place media_asset, :year %></div>
        <div class="one column song"><%= best_in_place media_asset, :cue %></div>
        <div class="one column song"><%= best_in_place media_asset, :intro %></div>
        <div class="one column song"><%= best_in_place media_asset, :eom %></div>
        <div class="one column song"><%= link_to 'Delete', media_asset, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  <% end %>
<% end %>

<br>

